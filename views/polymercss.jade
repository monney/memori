style(is= "custom-style").
  paper-scroll-header-panel {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: var(--paper-grey-200);;
  }
  paper-toolbar {
    background-color: var(--google-blue-500, #4285f4);
  }
  paper-toolbar .title {
    margin: 0 8px;
  }
  paper-scroll-header-panel .content {
    padding: 8px;
  }
  paper-icon-button {
    --paper-icon-button-ink-color: white
    color: white
  }
  .spacer {
    @apply(--layout-flex);
  }
